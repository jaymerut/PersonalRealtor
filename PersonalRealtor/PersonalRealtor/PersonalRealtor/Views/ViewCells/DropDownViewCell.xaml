<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalRealtor.Views.ViewCells.DropDownViewCell">
  <ViewCell.View>
      <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="14,0,14,0" Margin="0,10,0,10">
          <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
              <StackLayout.GestureRecognizers>
                  <TapGestureRecognizer Tapped="DropDown_Tapped"/>
              </StackLayout.GestureRecognizers>
              <Label x:Name="LabelName" HorizontalOptions="StartAndExpand" VerticalOptions="Center" FontSize="Large" FontAttributes="Bold" />
              <Image x:Name="ImageArrow" HorizontalOptions="End" VerticalOptions="Center" Source="down_arrow.png" HeightRequest="30" Aspect="AspectFit" />
          </StackLayout>
          <BoxView x:Name="SeparatorView" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="#666666" HeightRequest="1" Margin="0,5,0,5"/> 
      </StackLayout>
  </ViewCell.View>
</ViewCell>
