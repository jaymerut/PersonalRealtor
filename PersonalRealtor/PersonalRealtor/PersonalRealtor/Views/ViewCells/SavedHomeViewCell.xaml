<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalRealtor.Views.ViewCells.SavedHomeViewCell">
  <ViewCell.View>
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="White">
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="14,20,14,10">
            <Label Text="{Binding Address}" FontSize="18" FontAttributes="Bold" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="0,10,0,0">
                <Label Text="{Binding Price}" HorizontalOptions="StartAndExpand" FontSize="14" FontAttributes="Bold" />
                <Label Text="{Binding Bed}" FontSize="14" FontAttributes="Italic" Margin="0, 0, 5, 0" />
                <Label Text="{Binding Bath}" FontSize="14" FontAttributes="Italic" Margin="5, 0, 5, 0" />
                <Label Text="{Binding Sqft}" FontSize="14" FontAttributes="Italic" Margin="5, 0, 0, 0" />
            </StackLayout>
        </StackLayout>
        
        <BoxView BackgroundColor="#D9D9D9" HeightRequest="2" HorizontalOptions="FillAndExpand"/>

    </StackLayout>
  </ViewCell.View>
</ViewCell>
