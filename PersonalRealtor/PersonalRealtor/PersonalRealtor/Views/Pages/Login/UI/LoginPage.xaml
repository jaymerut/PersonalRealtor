<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PersonalRealtor.Views.Pages.Login.UI.LoginPage"
    xmlns:control="clr-namespace:PersonalRealtor.Controls"
    BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="20, 0, 20, 0">
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                <control:CustomEntry x:Name="EntryUserName" Placeholder="Enter Realtor Username Here" PlaceholderColor="#6B6B6B" HeightRequest="40" HorizontalOptions="FillAndExpand" Margin="0, 10, 0, 2.5" />
                <control:CustomEntry x:Name="EntryPassword" IsPassword="True" Placeholder="Enter Password Here" PlaceholderColor="#6B6B6B" HeightRequest="40" HorizontalOptions="FillAndExpand" Margin="0, 10, 0, 2.5" />
                <Button x:Name="ButtonLogin" Text="Login" Clicked="ButtonLogin_Clicked" FontSize="18" FontAttributes="Bold" CornerRadius="30" HorizontalOptions="FillAndExpand" Margin="0, 10, 0, 10" HeightRequest="60" />
                <Button x:Name="ButtonLogout" Text="Logout" Clicked="ButtonLogout_Clicked" FontSize="18" FontAttributes="Bold" CornerRadius="30" HorizontalOptions="FillAndExpand" Margin="0, 10, 0, 10" HeightRequest="60" />
            </StackLayout>
         </StackLayout>
    </ContentPage.Content>
</ContentPage>
